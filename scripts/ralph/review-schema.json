{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cable.dev/schemas/review-schema.json",
  "title": "Codex Review Response",
  "type": "object",
  "additionalProperties": false,
  "required": ["commit", "status", "review_comments"],
  "properties": {
    "commit": {
      "type": "string",
      "description": "Git commit hash at time of review (e.g. `git rev-parse HEAD`)"
    },
    "status": {
      "type": "string",
      "enum": ["ok", "not ok"],
      "description": "Overall review outcome: ok if complete with no blocking issues, not ok otherwise"
    },
    "review_comments": {
      "type": "array",
      "description": "Reviewer notes, concerns, or suggestions",
      "items": {
        "type": "string"
      }
    },
    "additional_comments": {
      "type": "string",
      "description": "Additional comments or notes from the reviewer"
    }
  }
}
