# Revurb Configuration Example
# Copy this file to .env and fill in your values

# Application Configuration (Required)
REVERB_APP_KEY=myappkey
REVERB_APP_SECRET=myappsecret
REVERB_APP_ID=myappid

# Server Configuration
REVERB_SERVER_HOST=0.0.0.0
REVERB_SERVER_PORT=8080
REVERB_SERVER_PATH=

# Connection Options
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

# Application Settings
REVERB_ALLOWED_ORIGINS=*
REVERB_APP_PING_INTERVAL=60
REVERB_APP_ACTIVITY_TIMEOUT=30
REVERB_APP_MAX_MESSAGE_SIZE=10000

# Scaling (Optional)
REVERB_SCALING_ENABLED=false
REVERB_SCALING_CHANNEL=reverb

# Redis Configuration (Required if scaling is enabled)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0
